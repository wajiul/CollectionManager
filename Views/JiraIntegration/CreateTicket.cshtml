@model UserTicketInputModel
@{
    ViewData["Title"] = "Create Ticket";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center">Create Ticket</h1>
                </div>
                <div class="card-body">
                    <form asp-action="CreateTicket" asp-controller="JiraIntegration" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Summary" class="control-label"></label>
                            <input asp-for="Summary" class="form-control form-control-sm" required />
                            <span asp-validation-for="Summary" class="error-message"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PriorityId" class="control-label"></label>
                            <select asp-for="PriorityId" class="form-select form-select-sm" aria-label=".form-select-sm">
                                <option value="1">Highest</option>
                                <option value="2">High</option>
                                <option value="3" selected>Meduim</option>
                                <option value="4">Low</option>
                                <option value="5">Lowest</option>
                            </select>
                        </div>
                               
                        <div class="d-flex flex-column flex-sm-row gap-1 justify-content-center align-items-center">
                            <button type="submit" class="btn btn-primary px-4">@Resource.Submit</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



