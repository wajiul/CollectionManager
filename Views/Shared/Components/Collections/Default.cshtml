@model IEnumerable<CollectionModel>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var collection in Model)
            {
                <tr>
                    <td>@collection.Name</td>
                    <td>@collection.Description</td>
                    <td>@collection.Category</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@collection.Id">Edit</a> |
                        <a asp-action="Index" asp-controller="Items" asp-route-collectionId="@collection.Id">View items</a> |
                        <a asp-action="Delete" asp-route-id="@collection.Id">Delete</a> |
                        <a asp-action="ManageCustomField" asp-route-collectionId="@collection.Id">Manage custom field</a> |
                        <a asp-action="Create" asp-controller="Items" asp-route-collectionId="@collection.Id">Add Item</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>