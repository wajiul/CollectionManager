@model IEnumerable<CollectionWithItemCountModel>

@{
    bool actionPermitted = (bool)ViewData["Action"];
    bool displayAuthor = (bool)ViewData["DisplayAuthor"];
    bool isAdmin = (bool)ViewData["IsAdmin"];
}
<div class="container">
    <div class="d-flex justify-content-center row mt-3">
        <div class="col card shadow p-0 min_width-567">
            <div class="card-header bg-primary text-white text-center">
                <h1>Collections</h1>
            </div>
            <div class="card-body">
                 <table class="table table-striped text-center" style="font-size:15px;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Items</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var collection in Model)
            {
                <tr>
                    <td>@collection.Name</td>
                    <td>@collection.Description</td>
                    <td>@collection.Category</td>
                    <td>@collection.ItemCount</td>
                    @if(displayAuthor)
                    {
                        <td>
                            <a asp-action="Index" asp-controller="OtherUserProfile" asp-route-userId="@collection.UserId" asp-route-id="@collection.Id">@collection.Author</a>
                        </td>
                    }

                    @if(isAdmin)
                    {
                        <td>
                             <partial name="_AdminCollectionActionPartial" model="new {collectionId = collection.Id, userId = collection.UserId}" />
                        </td>
                    }
                    else if(actionPermitted)
                    {
                        <td>
                            <partial name="_CollectionActionPartial" model="@collection.Id" />
                        </td>
                    }
                    else
                    {
                        <td style="width:2rem;">
                            <a class="btn btn-outline-info" asp-action="Collection" asp-controller="Collections" asp-route-id="@collection.Id">View</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
            </div>
        </div>
    </div>
</div>
