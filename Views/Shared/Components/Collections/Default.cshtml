@model IEnumerable<CollectionWithItemCountModel>

@{
    bool actionPermitted = (bool)ViewData["Action"];
    bool displayAuthor = (bool)ViewData["DisplayAuthor"];
}
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Items</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var collection in Model)
            {
                <tr>
                    <td>@collection.Name</td>
                    <td>@collection.Description</td>
                    <td>@collection.Category</td>
                    <td>@collection.ItemCount</td>
                    @if(displayAuthor)
                    {
                        <td>
                            <a asp-action="Index" asp-controller="OtherUserProfile" asp-route-userId="@collection.UserId" asp-route-id="@collection.Id">@collection.Author</a>
                        </td>
                    }

                    @if(actionPermitted)
                    {
                        <td>
                             <partial name="_CollectionActionPartial" model="@collection.Id" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <a class="btn btn-secondary" asp-action="Collection" asp-controller="Collections" asp-route-id="@collection.Id">View</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
