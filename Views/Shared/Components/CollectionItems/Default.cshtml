@model CollectionWithItemsReactionCountModel

<div class="container">
    <div class="my-3">
        <div class="row g-2">
            <div class="col-sm-2">Name</div>
            <div class="col-sm-10">@Model.Name</div>
        </div>
        <div class="row g-2">
            <div class="col-sm-2">Category</div>
            <div class="col-sm-10">@Model.Category</div>
        </div>
        <div class="row g-2">
            <div class="col-sm-2">Description</div>
            <div class="col-sm-10">@Model.Description</div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h1 class="text-center">Items</h1>
        </div>
        <div class="card-body">
             <table class="table table-sm table-striped text-center">
        <thead>
            <tr>
                <th>Name</th>
                <th>Tags</th>
                <th>Likes</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>

            @{
                var items = Model.Items;
            }
            @foreach (var item in @items)
            {
                <tr>
                    @{
                        var tagList = item.Tags;
                    }
                    <td>@item.Name</td>

                    <td>
                        @foreach (var tag in tagList)
                        {
                            <span class="badge rounded-pill bg-dark">@tag.Name</span>
                        }
                    </td>
                    <td>@item.Likes</td>
                    <td>@item.Comments</td>

                    @if(ViewData["Action"] != null &&  (bool)ViewData["Action"])
                    {
                        <td>
                            <partial name="_itemsActionPartial" model="new {Id = item.Id, CollectionId = Model.Id }" />
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-action="Items" asp-controller="Collections" asp-route-collectionId="@Model.Id" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>

        </div>
    </div>
</div>
