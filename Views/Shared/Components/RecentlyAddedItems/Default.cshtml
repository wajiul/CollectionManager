@model IEnumerable<ItemWithCreationDateModel>

<div class="container">
    <div class="row justify-content-center top-items">
        <div class="col-12 col-md-8">
            @foreach(var item in @Model)
            {
                <div class="card bordered shadow text-secondary mb-2">
                    <div class="card-body py-2">
                        <div class="row align-items-center">
                            <div class="card-date col-md-3">
                                <p class="mb-0">@item.CreatedAt</p>
                            </div>
                            <div class="col-md-6">
                                <a href="#">@item.Name</a>
                            </div>
                            <div class="d-flex gap-2 col-md-3">
                                <p class="mb-0 pb-0"><i class="bi bi-hand-thumbs-up me-1"></i>3</p>
                                <p class="mb-0 pb-0"><i class="bi bi-chat me-1"></i>9</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
