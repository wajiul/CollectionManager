@model dynamic

@{
    int Id = Model.Id;
    int CollectionId = Model.CollectionId;
}


<a 
    asp-action="Items" 
    asp-controller="ProfileCollectionItems" 
    asp-route-collectionId="@CollectionId"
    asp-route-id="@Id"
    class="btn btn-sm btn-primary">
    Details
</a>

<a 
    asp-action="Edit" 
    asp-controller="ProfileCollectionItems" 
    asp-route-id="@Id"
    asp-route-collectionId="@CollectionId"
    class="btn btn-sm btn-primary">
    Edit
</a>

<a asp-action="Delete"
   asp-controller="ProfileCollectionItems"
   asp-route-id="@Id"
   asp-route-collectionId="@CollectionId"
   class="btn btn-sm btn-primary">
   Delete
</a>





