@model dynamic

@{
    int Id = Model.Id;
    int CollectionId = Model.CollectionId;
    string userId = @Model.UserId;
}


<a asp-action="Items"
   asp-controller="ManageUserCollectionItems"
   asp-route-collectionId="@CollectionId"
   asp-route-itemId="@Id"
   asp-route-userId="@userId"
   asp-area="admin"
   class="btn btn-sm btn-outline-info">
    @Resource.Details
</a>

<a asp-action="Edit"
   asp-controller="ManageUserCollectionItems"
   asp-route-itemId="@Id"
   asp-route-collectionId="@CollectionId"
   asp-route-userId="@userId"
   asp-area="admin"
   class="btn btn-sm btn-outline-secondary">
    @Resource.Edit
</a>

<a asp-action="Delete"
   asp-controller="ManageUserCollectionItems"
   asp-route-itemId="@Id"
   asp-route-collectionId="@CollectionId"
   asp-route-userId="@userId"
   asp-area="admin"
   class="btn btn-sm btn-outline-danger">
    @Resource.Delete
</a>





