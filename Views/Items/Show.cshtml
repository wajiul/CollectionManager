@model CollectionModel 

<div class="container">
    <div class="mb-3">
        <div class="row g-2">
            <div class="col-sm-2">Name</div>
            <div class="col-sm-10">@Model.Name</div>
        </div>
        <div class="row g-2">
            <div class="col-sm-2">Category</div>
            <div class="col-sm-10">@Model.Category</div>
        </div>
        <div class="row g-2">
            <div class="col-sm-2">Description</div>
            <div class="col-sm-10">@Model.Description</div>
        </div>
    </div>

    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Tags</th>
            </tr>
        </thead>
        <tbody>
                
                @{
                    var items = Model.Items;
                }
                @foreach(var item in @items) {
                <tr>
                    @{
                        var tagList = JsonConvert.DeserializeObject<List<TagModel>>(item.Tags);
                    }
                    <td>@item.Name</td>
                    <td>
                        @foreach(var tag in tagList)
                        {
                            <span class="badge bg-primary">@tag.Name</span>
                        }
                    </td>

                    @foreach(var field in @item.FieldValues)
                    {
                        <td>@field.Value</td>
                    }
                </tr>
                }
        </tbody>
    </table>
</div>