@{
    ViewData["Title"] = "login";
}

@model LoginModel

<div class="container" style="min-height:80vh;">
    <div class="row mt-5">
        <div class="card shadow p-0 ms-auto me-auto" style="width: 25rem;">
            <div class="card-header text-center text-white bg-primary fs-2">@Resource.Login</div>
            <div class="card-body p-3">
                <form method="post" asp-action="Login" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="error-message"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com">
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="error-message"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="error-message"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input">
                            <label asp-for="RememberMe"></label>
                        </div>
                        <button class="btn btn-primary py-2 w-100">@Resource.Submit</button>
                </form>
            </div>
    </div>
    </div>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}