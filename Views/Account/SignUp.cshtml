@{
    ViewData["Title"] = "sign up";
}

@model SignUpModel

<div class="container" style="min-height:80vh;">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-5 card p-0 shadow">
            <div class="card-header text-center text-white bg-primary fs-2">@Resource.SignUp</div>
            <div class="card-body p3">
                <form method="post" asp-action="SignUp" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="error-message"></div>
                        <div class="form-floating mb-2">
                            <input asp-for="FirstName" class="form-control" placeholder="Owajeul">
                            <label asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="error-message"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="LastName" class="form-control" placeholder="Islam">
                            <label asp-for="LastName"></label>
                            <span asp-validation-for="LastName" class="error-message"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com">
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="error-message"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="error-message"></span>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Password">
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="error-message"></span>
                        </div>
                    <button class="btn btn-primary py-2 w-100">@Resource.Submit</button>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
